<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_weight=".5"
    card_view:cardCornerRadius="4dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/imageView" />

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:id="@+id/nameTV"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="product Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classTv"
            android:textSize="10dp"
            android:layout_marginTop="4dp"
            android:text="Class"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/priceTV"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="PP"
                android:textColor="#EB4034"
                android:id="@+id/WithoutDiscountpriceTV"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/deleteItemIMG"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/group_1585"/>

                <ImageView
                    android:id="@+id/removeItemIMG"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_remove"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To bag"
                    android:textSize="12dp"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/AddTobagTV"/>

            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:text="0"
                android:id="@+id/productCountTV"
                android:textAlignment="center"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/addProImg"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_marginTop="4dp"
                android:layout_height="30dp"
                android:src="@drawable/group_2380"/>



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>